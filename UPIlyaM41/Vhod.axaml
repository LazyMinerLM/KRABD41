<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="UPIlyaM41.Vhod"
        Title="Authorization">
    <Grid>
        <UniformGrid Columns="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin = "0 0 0 0">Логин </TextBlock>
                <TextBox Name="LogIn" x:CompileBindings="False" Width="200" Height="5" Margin = "0 0 0 0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin = "0 0 0 0">Пароль </TextBlock>
                <TextBox Name="Password" x:CompileBindings="False" Width="200" Height="5" Margin = "0 0 0 0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="Enter" Click="Login22" Width="100" Height="30" Margin = "10 0 0 0">Войти</Button>
            </StackPanel>
        </UniformGrid>         
    </Grid>                        
</Window>